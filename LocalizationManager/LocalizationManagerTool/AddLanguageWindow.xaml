<Window x:Class="LocalizationManagerTool.AddLanguageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LocalizationManagerTool"
        mc:Ignorable="d"
        Title="AddLanguageWindow" Height="300" Width="500">
    <Grid>
        <Label Content="Language" HorizontalAlignment="Left" Margin="156,124,0,0" VerticalAlignment="Top"/>
        <TextBox Name="input" HorizontalAlignment="Left" Margin="235,128,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Button Content="OK" HorizontalAlignment="Left" Margin="149,227,0,0" VerticalAlignment="Top" Width="75" Click="okButton_Click" IsDefault="True"/>
        <Button Content="Cancel" HorizontalAlignment="Left" Margin="280,227,0,0" VerticalAlignment="Top" Width="75" Click="cancelButton_Click" IsCancel="True"/>

    </Grid>
</Window>
